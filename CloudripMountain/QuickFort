// Мы должны быстро построить форт!

// Бригадир сохранил список с именами рабочих как свойство.
var foreman = hero.findNearest(hero.findFriends());
var workerNameList = foreman.workerList;


// Используй циклы с шагом для перебора каждого третьего элемента.
// Сначала отправь рабочих на постройку башен.
// Используй начальное значение 1 и приращение индекса на 3.
for (var i = 1; i < workerNameList.length; i += 3) {
    // Для каждого из них скажи имя и тип постройки.
    hero.say(workerNameList[i] + " - tower");
}

// Сначала отправь рабочих на постройку палаток.
// Используй начальное значение 0 и приращение индекса на 3.
for (i = 0; i < workerNameList.length; i += 3) {
    // Каждого из них отправь строить "tent".
    hero.say(workerNameList[i] + " - tent");
}

// Наконец, отправь рабочих на постройку забора.
// Используй начальное значение 2 и приращение индекса на 3.
for (i = 2; i < workerNameList.length; i += 3) {
    // Каждого из них отправь строить "fence".
    hero.say(workerNameList[i] + " - fence");
}
    
    

