// Йети окружили нас и нам надо убить их всех.
// Волшебник успел произнести заклинание сна.
// Твой герой может поглощать силу йети.
// Убей их в порядке от самого слабого к самому сильному.

// Волшебник отсортировал врагов, но не в том порядке.
var wizard = hero.findNearest(hero.findFriends());
var yetis = wizard.findEnemies();

// Тебе нужно перебрать йети в обратном порядке в цикле.
// Начальное значение должно быть  'yetis.length - 1'.
// Перебирай, пока индекс больше -1.
// Используй отрицательный шаг.
for (var i = yetis.length - 1; i > -1; i -= 1){
    var yeti = yetis[i];
    while(yeti &&yeti.health > 0) {
            hero.attack(yeti);
            }
            
        }
 
