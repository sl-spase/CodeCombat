// Собери 10 грибов.

// Эта функция проверяет, начинается ли фраза с данного слова.
function startsWith(phrase, word) {
    // Если слово длиннее, чем текст, возврат false.
    if (word.length > phrase.length) {
        return false;
    }
    for(var i = 0; i < word.length; i++){
        if (word[i] != phrase[i]) {
            return false;
        }
        }
    return true;
}


function onHear(event) {
    // Принимай зелье только от экспертов ("Exp"erts).
    if (startsWith(event.speaker.id, "Exp")) {
        var potion = pet.findNearestByType("potion");
        if (potion) {
            pet.fetch(potion);
            pet.moveXY(28, 34);
        }
    }
}
pet.on("hear", onHear);
while(true) {
    var mushrooms = hero.findByType("mushroom");
    var nearest = hero.findNearest(mushrooms);
    if (nearest) {
        hero.moveXY(nearest.pos.x, nearest.pos.y);
    }
}
