// Огры идут строем в сторону деревни.
// У тебя есть 90 секунд, чтобы построить минное поле.
// Мы используем их строгий строй против них.

// Используй вложенные циклы, чтобы построить минное поле решёткой.
// Сперва перебери координату x от 12 до 60 с шагом 8.
for (var x = 12; x < 12 + 8 * 6; x += 8) {
    // Для каждого x перебери координату y от 12 до 68 с шагом 8.
    for (var y = 12; y < 12 + 8 * 7; y += 8) {
        // В каждой точке строй ловушку ("fire-trap").
        hero.buildXY("fire-trap", x, y);
    }
    // После каждого столбца желательно смещаться вправо, чтобы не наступать на мины.
    hero.moveXY(hero.pos.x + 8, hero.pos.y);
}

// Теперь жди и смотри за подходящими ограми.
// Когда они окажутся рядом (примерно 20 метров от героя) - взрывай мины.
// Просто наступи на ближайшую мину, когда придёт время.
while(true) {
    var enemy = hero.findNearestEnemy();
    if (enemy && hero.distanceTo(enemy) <= 23) {
    hero.moveXY(52, 60);    
    } 
}

